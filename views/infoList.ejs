<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Gate</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <button class="nav-link" id="all">All</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="resident">Resident</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="visitor">Visitor</button>
            </li>
        </ul>
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</nav>

<h1>List of Residents</h1>
<ul id="residentList">
    <% residents.forEach(resident => { %>
        <li><%= resident.name %></li>
    <% }); %>
</ul>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('all').addEventListener('click', () => {
        axios.get('/admin-area')
            .then(response => updateResidentList(response.data))
            .catch(error => console.error(error))
    });

    document.getElementById('resident').addEventListener('click', () => {
        axios.get('/admin-area-residents')
            .then(response => updateResidentList(response.data))
            .catch(error => console.error(error))
    });

    document.getElementById('visitor').addEventListener('click', () => {
        axios.get('/admin-area-visitors')
            .then(response => updateResidentList(response.data))
            .catch(error => console.error(error))
    });

    function updateResidentList(data) {
        const residentList = document.getElementById('residentList');
        residentList.innerHTML = ''; // Clear existing content

        if (Array.isArray(data)) {
            data.forEach(entry => {
                const listItem = document.createElement('li');

                if ('name' in entry && 'phone_number' in entry && 'email_id' in entry && 'identification_code' in entry) {
                    // Entry is a resident
                    listItem.textContent = `Name: ${entry.name}, Phone: ${entry.phone_number}, Email: ${entry.email_id}, ID Code: ${entry.identification_code}`;
                } else if ('name' in entry && 'phone_number' in entry && 'vehicle_number' in entry && 'entry' in entry && 'tenure_hours' in entry) {
                    // Entry is a visitor
                    listItem.textContent = `Name: ${entry.name}, Phone: ${entry.phone_number}, Vehicle: ${entry.vehicle_number}, Entry: ${new Date(entry.entry).toLocaleString()}, Tenure: ${entry.tenure_hours} hours`;
                } else {
                    // Unknown entry type
                    listItem.textContent = 'Unknown entry type';
                }

                residentList.appendChild(listItem);
            });
        } else {
            const listItem = document.createElement('li');
            listItem.textContent = 'No data received';
            residentList.appendChild(listItem);
        }
    }

</script>
</body>
</html>