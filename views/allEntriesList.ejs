<!DOCTYPE html>
<html>
<head>
    <title>All Entries List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <h1>All Entries</h1>

    <h2>Residents</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Entry Status</th>
        </tr>
        </thead>
        <tbody>
        <% for(let resident of residents) { %>
            <tr>
                <td><%= resident.name %></td>
                <td><%= resident.email_id %></td>
                <td><%= resident.phone_number %></td>
                <td><%= resident.entry ? 'Inside' : 'Outside' %></td>
            </tr>
        <% } %>
        </tbody>
    </table>

    <h2>Visitors</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Vehicle Number</th>
            <th>Entry Time</th>
            <th>Tenure (in minutes)</th>
            <th>Expired</th>
        </tr>
        </thead>
        <tbody>
        <% for(let visitor of visitors) { %>
            <tr>
                <td><%= visitor.name %></td>
                <td><%= visitor.phone_number %></td>
                <td><%= visitor.vehicle_number %></td>
                <td><%= visitor.entry %></td>
                <td><%= visitor.tenure_hours %></td>
                <td><%= visitor.is_expired ? 'Yes' : 'No' %></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
</body>
</html>